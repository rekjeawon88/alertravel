<script>
	// 금액 직접 입력 선택 시 입력창 보이게 함
	document.getElementById('donationAmount')
			.addEventListener('change',	function() {
				var customAmountInput = document.getElementById('customAmountInput');
		customAmountInput.style.display = (this.value === 'custom') ? 'block' : 'none';
	});
</script>

