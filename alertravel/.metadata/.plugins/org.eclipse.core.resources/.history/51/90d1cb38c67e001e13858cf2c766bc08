<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script
	src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script
	src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
  // 이벤트 리스너를 추가합니다.
  document.getElementById('donationCountry').addEventListener('change', updateSummary);
  document.getElementById('donationAmount').addEventListener('change', updateSummary);

  function updateSummary() {
    // 선택한 국가와 후원 금액을 가져옵니다.
    const selectedCountry = document.getElementById('donationCountry').value;
    const selectedAmount = document.getElementById('donationAmount').value;

    // 선택한 값을 보여줄 요소를 가져옵니다.
    const summaryElement = document.getElementById('summary');

    // 요약 내용을 만들어 표시합니다.
    const summaryText = `선택한 국가: ${selectedCountry}, 후원 금액: ${selectedAmount}원`;
    
    // 요약을 화면에 표시합니다.
    summaryElement.innerText = summaryText;
  }
</script>

